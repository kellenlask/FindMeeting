<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bk.fm.findmeeting" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <fragment
            android:name=".ParamEntry"
            android:label="@string/app_name" >

        </fragment>
        <fragment
            android:name=".Summary"
            android:label="@string/title_activity_summary"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </fragment>
        <fragment
            android:name=".InvolvedPeople"
            android:label="@string/title_activity_involved_people"
            android:parentActivityName=".Summary" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bk.fm.findmeeting.Summary" />
        </fragment>
        <fragment
            android:name=".SavedPeople"
            android:label="@string/title_activity_saved_people"
            android:parentActivityName=".InvolvedPeople" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bk.fm.findmeeting.InvolvedPeople" />
        </fragment>
        <fragment
            android:name=".PersonalSummary"
            android:label="@string/title_activity_availability"
            android:parentActivityName=".InvolvedPeople" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bk.fm.findmeeting.InvolvedPeople" />
        </fragment>
        <fragment
            android:name=".NewObligAvail"
            android:label="@string/title_activity_new_oblig_avail"
            android:parentActivityName=".PersonalSummary" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PersonalSummary" />
        </fragment>
        <fragment
            android:name=".Results"
            android:label="@string/title_activity_results"
            android:parentActivityName=".InvolvedPeople" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bk.fm.findmeeting.InvolvedPeople" />
        </fragment>
    </application>
</manifest>

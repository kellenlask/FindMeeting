<?xml version="1.0" encoding="utf-8"?>
<manifest package="FM.BK"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".PeoplePage"
            android:label="@string/title_activity_people_pane"
            android:parentActivityName=".SummaryPane">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="FM.BK.MainActivity"/>
        </activity>
        <activity
            android:name=".SavedPeople"
            android:label="@string/title_activity_saved_people"
            android:parentActivityName=".PeoplePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="FM.BK.MainActivity"/>
        </activity>
        <activity
            android:name=".AvailabilityPage"
            android:label="@string/title_activity_availability_page"
            android:parentActivityName=".PeoplePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="FM.BK.MainActivity"/>
        </activity>
        <activity
            android:name=".NewObAvPage"
            android:label="@string/title_activity_new_ob_av__page"
            android:parentActivityName=".AvailabilityPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="FM.BK.MainActivity"/>
        </activity>
        <activity
            android:name=".SummaryPane"
            android:label="@string/title_activity_summary_pane"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="FM.BK.MainActivity"/>
        </activity>
        <activity
            android:name=".ResultsPage"
            android:label="@string/title_activity_results_page"
            android:parentActivityName=".PeoplePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="FM.BK.MainActivity"/>
        </activity>
    </application>

</manifest>
